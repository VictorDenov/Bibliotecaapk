<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp"
    android:layout_gravity="center"
    android:id="@+id/cardViewLibro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ImageView para mostrar la imagen del libro -->
        <ImageView
            android:id="@+id/imageViewLibro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image" /> <!-- Imagen por defecto -->

        <!-- Título del libro -->
        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del libro"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:padding="8dp" />

        <!-- Autor del libro -->
        <TextView
            android:id="@+id/textViewAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:padding="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
